<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">

    <RelativeLayout
        android:tag="front"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/message_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingRight="95dp"
            android:paddingLeft="52dp"
            android:src="@drawable/message_icon" />

        <TextView
            android:id="@+id/message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In the Morming"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/message_icon"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/message_summary"
            android:layout_below="@id/message_sender"
            android:text="In the Morming"
            android:layout_alignLeft="@id/message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/timeReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="#100dfsdvfgdfg0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


    <!-- just a divider -->
    <View android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp" />

</FrameLayout>